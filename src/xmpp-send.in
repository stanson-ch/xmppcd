#!/bin/sh

SPOOL_OUT="@localstatedir@/spool/xmppcd/out"
TO=$1
MSG=$2

[ -z "${TO}" -o -z "${MSG}" ] && { 
    echo "ERROR: Too few arguments!"
    echo "Usage: $(basename $0) some_user@xmpp-server.com \"Message text\"\n"
    exit 1 
}

FILE=`mktemp -t xmppcd.XXXXXX`
echo "To: ${TO}" > "${FILE}"
echo >> "${FILE}"
echo "${MSG}" >> "${FILE}"
chmod 644 "${FILE}"
mv "${FILE}" "${SPOOL_OUT}"

exit 0
